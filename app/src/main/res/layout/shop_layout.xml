<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginStart="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/shopImageView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/openstore" />

        <TextView
            android:id="@+id/shopNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shopOwnerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Name " />


        <TextView
            android:id="@+id/shopAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address" />
        <!-- Add other views for additional information -->
        <TextView
            android:id="@+id/shopContactTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="18"
            android:maxEms="20"
            android:text="Contact" />

    </LinearLayout>

</androidx.cardview.widget.CardView>