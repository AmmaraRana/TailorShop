<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" /> <!-- Change to desired pressed color -->
            <stroke android:color="@android:color/black" android:width="2dp" /> <!-- Border color and width -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Default color (no pressed state) -->
            <stroke android:color="@android:color/black" android:width="2dp" /> <!-- Border color and width -->
        </shape>
    </item>
</selector>